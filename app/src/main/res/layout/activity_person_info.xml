<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pieces.person.ui.impl.view.UserInfoActivity">

        <Button
            android:id="@+id/btn_person_main_menu"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorTransparentWhite"
            android:text="@string/txt_main_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_person_banner"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person_banner" />

        <TextView
            android:id="@+id/txt_person_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/title_person"
            android:textColor="?android:attr/navigationBarColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_person_banner"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_lbl_person_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_lbl_person_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_surname"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_surname"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_lbl_person_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_email"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_email"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_lbl_person_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_phone_number"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_phone_number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_lbl_person_identificator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_identificator"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_identificator"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_lbl_person_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/lbl_person_roles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_person_roles" />

        <ListView
            android:id="@+id/list_person_roles"
            android:layout_width="0dp"
            android:layout_height="129dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_date_created" />

        <TextView
            android:id="@+id/txt_lbl_person_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_id"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_id"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txt_edit_person_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="@string/dummy_txt_person_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/img_person_banner" />

        <EditText
            android:id="@+id/txt_edit_person_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="@string/dummy_txt_person_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_id" />

        <EditText
            android:id="@+id/txt_edit_person_surname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="@string/dummy_txt_person_surname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_name" />

        <EditText
            android:id="@+id/txt_edit_person_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textEmailAddress"
            android:text="@string/dummy_txt_person_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_surname" />

        <EditText
            android:id="@+id/txt_edit_person_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="phone"
            android:text="@string/dummy_txt_person_phone_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_email" />

        <EditText
            android:id="@+id/txt_edit_person_identificator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="@string/dummy_txt_person_identificator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_phone_number" />

        <TextView
            android:id="@+id/txt_lbl_person_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/lbl_person_date_created"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_person_date_created"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txt_edit_person_date_created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="date"
            android:text="@string/dummy_txt_person_date_created"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_lbl_person_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_edit_person_identificator" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>