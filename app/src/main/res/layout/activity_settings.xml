<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netikras.studies.studentbuddy.api.client.android.person.SettingsActivity">

    <ImageView
        android:id="@+id/img_settings_banner"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/settings_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/title_settings"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_settings_banner"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_lbl_settings_url"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_settings_url"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_edit_settings_url"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_edit_settings_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textUri"
        android:text="@string/dummy_txt_settings_url"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lbl_settings_url"
        app:layout_constraintTop_toBottomOf="@+id/img_settings_banner" />

    <TextView
        android:id="@+id/txt_lbl_settings_notifications_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_settings_notifications_enable"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch_settings_notifications_enable"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switch_settings_notifications_enable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lbl_settings_url"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_settings_url" />

    <Spinner
        android:id="@+id/spinner_settings_notifications_time_before_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lbl_settings_url"
        app:layout_constraintTop_toBottomOf="@+id/switch_settings_notifications_enable" />

    <TextView
        android:id="@+id/txt_lbl_settings_notifications_time_before_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_settings_notifications_time_before_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_settings_notifications_time_before_event" />

</android.support.constraint.ConstraintLayout>
