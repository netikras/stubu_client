<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pieces.lecture.ui.impl.view.LecturesListActivity">

        <ImageView
            android:id="@+id/img_lectures_list_title"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/schedule_banner" />

        <TextView
            android:id="@+id/txt_lectures_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/title_lectures_list"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_lectures_list_title"
            app:layout_constraintStart_toStartOf="parent" />

        <include layout="@layout/include_main_menu_button"/>
        <!-- Progress bar overlay; shown while login is in progress -->
        <include layout="@layout/include_progress_overlay"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>